        ["laserdesignator"] call _addOptics;
        [_commonRIFLE, _countRIFLE] call _addWeaponKit;
        [_commonPISTOL, _countPISTOL] call _addWeaponKit;
		["primary", _commonRCO] call _attachToWeapon;
